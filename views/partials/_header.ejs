      </form>
      <% } else { %>
        <div class>
          <a class="nav-item nav-link " method="POST" href="/login">Login</a>
          <a class="nav-item nav-link" method="POST" href="/register">Register</a>
        </div>

        <% } %>
          <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
              <a class="nav-item nav-link" href="/urls">My URLs</a>
